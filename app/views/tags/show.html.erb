<div class="tag_show_container">

  <h2><span class="tag_show_category"> <%= @tag.category%> </span> </h2>

  <% @tag.questions.each do |question| %>
  <div class="tag_show_qlink">
    <div class="tag_show_qtitle"> <%= link_to question.title, question_path(question) %> </div>
    <div class="tag_show_qinfo"> Asked by: <%= link_to question.user.name, user_path(question.user) %>, <%= time_ago_in_words(question.created_at) %> ago </div>
  </div>

  <% end %>
</div>
