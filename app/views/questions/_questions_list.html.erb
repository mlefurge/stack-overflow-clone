<div class="question_list">

  <% @questions.newest.each do |question| %>

    <div class="question_preview">

      <div class="question_votes">
        <div class="question_counts">
          <span> 0 </span>
        </div>
        <div> Votes </div>
      </div>

    <div class="question_answers">
      <div class="question_counts">
        <span> 0 </span>
      </div>
      <div> Answers </div>
    </div>

    <div class="question_info">
      <div class="question_title">
        <span> <%= link_to question.title, question_path(question) %> </span>
      </div>
      <div> Posted By: <%= question.user.name %>, <%= time_ago_in_words(question.created_at) %> ago <% if logged_in? && question.user_id == current_user.id  %> <%= link_to "Edit", edit_question_path(question) %> <% end %></div>
    </div>

  </div>


  <% end %>



</div>
