<% if @errors %>
  <ul><% @errors.each do |error| %>
    <li><%= error %></li>
  <% end %></ul>
<% end %>

<div class="new_answer_container">
  <%= form_for @answer, url: question_answers_path(@question) do |f| %>
    <p><%= f.label :content %></p>
    <p><%= f.text_area :content, :placeholder => "Enter your answer here", class: "content_input" %></p>
    <%= f.submit "Publish" %>
  <% end %>
</div>

